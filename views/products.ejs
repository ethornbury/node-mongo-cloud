<!DOCTYPE html>
<html>
    <head>
        <% include partials/header %>
    </head>
    <body>
          <div class="w3-container l3 w3-text-grey w3-padding" >
            <% include partials/nav %>

                <div class="w3-row w3-grayscale">
                    <div class="w3-col l1">
                        <p></p>
                    </div>
                    <div class="w3-col l3">
                        <h2>Product List</h2>
						<% data.forEach(function(product){ %>
                        <ul>
							<li>ID: <%= product._id %></li>
							<li>Product name: <%= product.name %></li>							
							<li>Description: <%= product.description %></li>
							<li>Price: &euro;<%= product.price %></li>
							<a href="/product/<%= product._id %>" class="w3-button w3-teal" >show</a>
							<a href="/product-update/<%= product._id %>" class="w3-button w3-teal" >update</a>
										
							<a href="/product-delete/<%= product._id %>" class="w3-button w3-teal" >delete</a>
							<!-- <a href="#" class="w3-button w3-teal" >can't delete</a> -->
                        </ul>
						<% }); %> 
                    </div>
                    <div class="w3-col l3">
                        <h2>A List</h2>
                        
                    </div>
                    <div class="w3-col l3">
                        <h2>Another thing here</h2>
						<a href="/product-add" class="w3-teal w3-button">Add product</a>

                    </div>
                </div>
            <% include partials/footer %>
          </div>
  </body>
</html>